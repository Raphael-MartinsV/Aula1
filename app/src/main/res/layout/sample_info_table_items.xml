<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:id="@+id/tableInfoItems">

    <ImageView
        android:id="@+id/android_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/android_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_baseline_drive_eta_24"/>

    <TextView
        android:id="@+id/android_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/android_name"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/android_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/android_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/android_name"
        android:maxLines="3"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/android_image"
        app:layout_constraintTop_toBottomOf="@+id/android_title"
        app:layout_constraintBottom_toBottomOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>